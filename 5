using System;
class Program
{
    static void Main()
    {
        Console.Write("Введите размер массива n: ");
        int n = int.Parse(Console.ReadLine());
        int[] array = new int[n];
        Console.WriteLine("Введите элементы массива:");
        for (int i = 0; i < n; i++)
        {
            array[i] = int.Parse(Console.ReadLine());
        }
        double sum = 0;
        for (int i = 0; i < n; i++)
        {
            sum += array[i];
        }
        double average = sum / n;
        int count = 0;
        double sumGreaterThanAverage = 0;
        for (int i = 0; i < n; i++)
        {
            if (array[i] > average)
            {
                count++;
                sumGreaterThanAverage += array[i];
            }
        }
        Console.WriteLine($"Среднее арифметическое: {average}");
        Console.WriteLine($"Количество чисел, больших среднего арифметического: {count}");
        Console.WriteLine($"Сумма чисел, больших среднего арифметического: {sumGreaterThanAverage}");
    }
}
